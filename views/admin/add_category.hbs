<script>
function previewImage(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('imagePreview');
    
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            preview.src = e.target.result;
            preview.style.display = 'block';
        };
        reader.readAsDataURL(file);
    } else {
        preview.src = '';
        preview.style.display = 'none';
    }
}

function validateForm() {
    let errors = [];
    
    var name = document.getElementById('name').value.trim();
    var nameerror = document.getElementById('nameError');
    var namePattern = /^[a-zA-Z0-9\s\-_&.,!@#$%^()]{5,}$/;

    // Clear previous errors
    nameerror.innerHTML = "";
    document.getElementById('imageError').innerHTML = "";

    if (!name.match(namePattern)) {
        errors.push("Name must be at least 5 characters and can include letters, numbers, spaces, hyphens, underscores, and common special characters.");
        nameerror.innerHTML = "Name must be at least 5 characters and can include letters, numbers, spaces, hyphens, underscores, and common special characters.";
    }

    var image = document.getElementById('image');
    var imageerror = document.getElementById('imageError');
    var validImageTypes = ['image/png', 'image/jpeg', 'image/jpg', 'image/avif', 'image/webp'];

    if (image.files.length === 0) {
        errors.push("Please choose an image");
        imageerror.innerHTML = "Please choose an image";
    } else {
        var file = image.files[0];
        
        // Check file type
        if (!validImageTypes.includes(file.type)) {
            errors.push("Invalid image type. Only PNG, JPEG, JPG, AVIF and WebP are allowed.");
            imageerror.innerHTML = "Invalid image type. Only PNG, JPEG, JPG, AVIF and WebP are allowed.";
        }
        
        // Check file size (5MB limit)
        if (file.size > 5 * 1024 * 1024) {
            errors.push("File size must be less than 5MB.");
            imageerror.innerHTML = "File size must be less than 5MB.";
        }
    }

    return errors.length === 0;
}

