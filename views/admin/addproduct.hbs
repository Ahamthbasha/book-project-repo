<script>
    // Simple image preview function without cropper
    function previewImage(event, index) {
        let input = event.target;
        let file = input.files[0];

        if (!file) return;

        // File size validation
        const maxSize = 5 * 1024 * 1024; // 5MB
        if (file.size > maxSize) {
            alert("File size exceeds the maximum limit of 5MB.");
            input.value = "";
            return;
        }

        // File type validation
        const allowedExtensions = /\.(jpg|jpeg|png|gif|avif|webp)$/i;
        if (!allowedExtensions.test(file.name)) {
            alert('Please upload file having extensions .jpeg/.jpg/.png/.gif/.avif/.webp only.');
            input.value = "";
            return;
        }

        // Preview the image
        let reader = new FileReader();
        reader.onload = function () {
            let dataURL = reader.result;
            let image = document.getElementById('imgView' + index);
            image.src = dataURL;
            image.style.display = 'block';
        };
        reader.readAsDataURL(file);
    }

    // Form validation
    function Validation() {
        var errors = [];
        var fileInput = document.getElementById('input1');
        let productName = document.getElementById("productName").value;
        let longdescription = document.getElementById("longdescription").value;
        let Qty = document.getElementById("Qty").value;
        let price = document.getElementById("price").value;

        let productNameRegex = /^[a-zA-Z0-9\s'-]+$/;
        let number = /^[1-9]\d*$/;
        let descriptionRegex = /^(?!\s*$)[\s\S]{1,500}$/;

        let productNameAlert = document.getElementById("productNameAlert");
        let qtyAlert = document.getElementById("qtyAlert");
        let priceAlert = document.getElementById("priceAlert");
        let longAlert = document.getElementById("longAlert");
        let imgAlert = document.getElementById('imgAlert');

        // Clear previous alerts
        productNameAlert.innerHTML = "";
        qtyAlert.innerHTML = "";
        priceAlert.innerHTML = "";
        longAlert.innerHTML = "";
        imgAlert.innerHTML = "";

        if (!productName.match(productNameRegex)) {
            errors.push("Name Not Valid");
            productNameAlert.innerHTML = "Name Not Valid";
        }
        if (!Qty.match(number)) {
            errors.push("Please Check Qty Again");
            qtyAlert.innerHTML = "Please Check Qty Again";
        }
        if (!price.match(number)) {
            errors.push("Please Check Price Again");
            priceAlert.innerHTML = "Please Check Price Again";
        }
        if (!longdescription.match(descriptionRegex)) {
            errors.push("Please Check description Again");
            longAlert.innerHTML = "Please Check description Again (max 500 characters)";
        }
        if (fileInput.files.length === 0) {
            errors.push("Please choose at least one image");
            imgAlert.innerHTML = "Please choose at least one image";
        }

        return errors.length === 0;
    }

    $(document).ready(function () {
        $('#backbutton').click(function (e) {
            e.preventDefault();
            Swal.fire({
                title: "Leave the page?",
                text: "The Data will not be saved",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#088178",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/admin/product";
                }
            });
        });
    });

    function submitform(form) {
        event.preventDefault();
        if (Validation(form)) {
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to save?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#088178",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: 'Uploading...',
                        text: 'Please wait while we upload your product images',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    form.submit();
                }
            });
        }
    }
</script>