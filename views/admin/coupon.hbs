    <script>
////////////delete Coupon
       
       $(document).ready(function () {
        $(document).on('click','#deletecoupon',function(e){
            e.preventDefault();
            var id = $(this).data('coupon-id');
            var $this = $(this);

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#088178",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '/admin/delete_coupon',
                        contentType: 'application/json',
                        data: JSON.stringify({ id: id }),
                        success: function (productData) {                         
                            $this.closest('tr').remove(); // Use $this instead of $(this)                               
                        },
                        error: function (xhr, status, error) {
                            console.error("Error removing product from wishlist:", error);
                            swal("Error", "Something went wrong. Please try again later.", "error");
                        }
                    });
                    Swal.fire({
                        title: "Deleted!",
                        text: "Coupon Deleted Succesfully!",
                        icon: "success"
                    }).then(()=> window.location.reload());
                }
            });


        });
    });
       

$(document).ready(function() {
    $(document).on('click', '#editcoupon', function (e) {
        e.preventDefault();
        var id = $(this).data('coupon-id');
        var editUrl = '/admin/editcoupon/' + id;

        console.log('Coupon ID:', id);

        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to edit this coupon?",
            icon: "info",
            showCancelButton: true,
            confirmButtonColor: "#088178",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, edit it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = editUrl;
            }
        });
    });
});

</script>
