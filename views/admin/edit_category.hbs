<script>
function previewImage(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('imagePreview');
    const currentImage = document.getElementById('currentImage');
    
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            preview.src = e.target.result;
            preview.style.display = 'block';
            currentImage.style.opacity = '0.5';
        };
        reader.readAsDataURL(file);
    } else {
        preview.src = '';
        preview.style.display = 'none';
        currentImage.style.opacity = '1';
    }
}

function validateForm() {
    let errors = [];
    
    var name = document.getElementById('productName').value.trim();
    var nameError = document.getElementById('nameError');
    var fileInput = document.getElementById('productImage');
    var fileError = document.getElementById('fileError');

    var categoryPattern = /^(?=.*[a-zA-Z])[a-zA-Z0-9\s\-_&.,!@#$%^()]{5,}$/;

    // Clear previous errors
    nameError.innerHTML = "";
    fileError.innerHTML = "";

    // Validate category name
    if (!name.match(categoryPattern)) {
        errors.push("Name must be at least 5 characters long and must include at least one letter. Special characters, numbers, and spaces are allowed.");
        nameError.innerHTML = "Name must be at least 5 characters long and must include at least one letter. Special characters, numbers, and spaces are allowed.";
    }

    // Validate uploaded file if provided
    var file = fileInput.files[0];
    if (file) {
        var fileType = file.type;
        var validImageTypes = ['image/png', 'image/jpeg', 'image/jpg', 'image/avif', 'image/webp'];
        
        if (!validImageTypes.includes(fileType)) {
            errors.push("Only image files are allowed (PNG, JPEG, JPG, AVIF, WebP).");
            fileError.innerHTML = "Only image files are allowed (PNG, JPEG, JPG, AVIF, WebP).";
        }
        
        // Check file size (5MB limit)
        if (file.size > 5 * 1024 * 1024) {
            errors.push("File size must be less than 5MB.");
            fileError.innerHTML = "File size must be less than 5MB.";
        }
    }

    return errors.length === 0;
}

