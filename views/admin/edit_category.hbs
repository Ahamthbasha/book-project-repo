<script>
    function Validation() {
        let errors = [];

        var name = document.getElementById('productName').value;
        var nameError = document.getElementById('nameError');

        // Regular expression to allow names with a minimum of five letters and single spaces between words
        var categoryPattern = /^(?:[a-zA-Z]+(?: [a-zA-Z]+)*){5,}$/;

        // Validate the name against the pattern
        if (!name.match(categoryPattern)) {
            errors.push("Name Not Valid");
        }

        // Handle errors
        if (errors.length > 0) {
            nameError.innerHTML = errors.includes("Name Not Valid") ? 
                                  "Name must be at least 5 letters and can include single spaces between words." : "";
            return false; // Prevent form submission
        }

        return true; // Validation passed
    }
</script>
